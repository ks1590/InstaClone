<h1>投稿内容</h1>
<%= form_with(model: @user, url: users_path, local: true) do |f| %>
  <div class="panel-body row">
    <p class="user-content"><%= @user.name %></p>
    <%= f.hidden_field :name %>
    <p class="user-content"><%= @user.email %></p>
    <%= f.hidden_field :email %>
    <%= image_tag(@user.image.url) if @user.image && @user.image.url %>
    <%= f.hidden_field :image_cache %>
  </div>
  <%= f.submit("投稿する", class:"btn btn-primary") %>
<% end %>
<%= form_with(model:@user, url:new_user_path, local:true, method:"get") do |f| %>
  
  <%= f.hidden_field :image_cache %>
  <%= f.submit("戻る", name: "back", class:"btn btn-warning") %>
<% end %>