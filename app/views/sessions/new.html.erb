<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1>ログイン</h1>
		<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
			<%= f.email_field :email, class: "form-group form-control form-control-lg",:placeholder => "メールアドレス" %>
			<%= f.password_field :password, class: "form-group form-control form-control-lg",:placeholder => "パスワード" %>
			<%= f.submit "ログイン", class:"btn btn-success btn-lg btn-block" %>
		<% end %>
	</div>
</div>